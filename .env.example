# Example environment configuration
# Copy this file to .env and fill in your values

# OpenAI API Key for AI business quality analysis (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Yahoo Finance API settings (optional)
YF_TIMEOUT=30
YF_RETRY_COUNT=3

# Application settings
LOG_LEVEL=INFO
CACHE_EXPIRY_DAYS=7

# Output settings
EXCEL_ENGINE=openpyxl
DEFAULT_OUTPUT_FORMAT=xlsx

# Web scraping settings (for screener.in)
REQUEST_TIMEOUT=30
REQUEST_RETRY_COUNT=3
USER_AGENT="StockScreener/1.0 (+https://github.com/chirag-sharma/StockScreener)"

# Performance settings
CONCURRENT_REQUESTS=5
BATCH_SIZE=10
